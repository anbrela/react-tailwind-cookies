{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "lib": ["dom", "es2015", "es2017"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
